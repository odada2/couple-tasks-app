rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to get user data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Helper function to check if user is part of a couple
    function isInCouple(coupleId) {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             getUserData().coupleId == coupleId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read and write their own document
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if false; // Prevent deletion
    }
    
    // Couples collection
    match /couples/{coupleId} {
      // Both partners can read and write the couple document
      allow read: if isSignedIn() && 
                     request.auth.uid in resource.data.partnerIds;
      allow create: if isSignedIn() && 
                       request.auth.uid in request.resource.data.partnerIds;
      allow update: if isSignedIn() && 
                       request.auth.uid in resource.data.partnerIds;
      allow delete: if false; // Prevent deletion
    }
    
    // Tasks collection
    match /tasks/{taskId} {
      // Users can read tasks if they're part of the couple
      allow read: if isSignedIn() && isInCouple(resource.data.coupleId);
      
      // Users can create tasks if they're part of the couple
      allow create: if isSignedIn() && 
                       isInCouple(request.resource.data.coupleId) &&
                       request.resource.data.createdByUserId == request.auth.uid;
      
      // Users can update tasks if they're part of the couple
      allow update: if isSignedIn() && isInCouple(resource.data.coupleId);
      
      // Users can delete their own tasks
      allow delete: if isSignedIn() && 
                       isInCouple(resource.data.coupleId) &&
                       resource.data.createdByUserId == request.auth.uid;
    }
    
    // Nudges collection
    match /nudges/{nudgeId} {
      // Users can read nudges if they're part of the couple
      allow read: if isSignedIn() && isInCouple(resource.data.coupleId);
      
      // Users can create nudges if they're part of the couple
      allow create: if isSignedIn() && 
                       isInCouple(request.resource.data.coupleId) &&
                       request.resource.data.fromUserId == request.auth.uid;
      
      // No updates or deletes for nudges
      allow update, delete: if false;
    }
    
    // Message templates collection (optional, for future use)
    match /messageTemplates/{templateId} {
      // Everyone can read templates
      allow read: if isSignedIn();
      // Only admins can write (not implemented yet)
      allow write: if false;
    }
    
    // Events collection (optional, for analytics)
    match /events/{eventId} {
      // Users can create events
      allow create: if isSignedIn();
      // No one can read, update, or delete events
      allow read, update, delete: if false;
    }
  }
}
